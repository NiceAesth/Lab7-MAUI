<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:BaciuAndreiLab7.Models"
             xmlns:local="clr-namespace:BaciuAndreiLab7"
             x:Class="BaciuAndreiLab7.ListPage">

    <StackLayout Margin="20">
        <Editor Placeholder="Enter the description of the shopping list"
                Text="{Binding Description}"
                x:DataType="models:ShopList"
                HeightRequest="50">
            <Editor.Behaviors>
                <local:ValidationBehavior />
            </Editor.Behaviors>
        </Editor>
        
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button Text="Save"
                    Grid.Column="0"
                    Clicked="OnSaveButtonClicked" />
            <Button Text="Delete"
                    Grid.Column="1"
                    Clicked="OnDeleteButtonClicked" />
            <Button Text="Add Product"
                    Grid.Row="1"
                    Clicked="OnChooseButtonClicked" />
        </Grid>
        
        <ListView x:Name="ListView"
                  Margin="20">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Detail="{Binding Description}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>

</ContentPage>